{% extends 'base-edu.html.twig' %}

{% block body %}
<section class="body" data-type="main">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                <p>{% trans with {'%company%': 'ISDI'} %}To check an electronic document ownership or emitted by %company%, please, enter the identification number or drag the original document inside the box{% endtrans %}.</p>
                <div class="hash">
                    <form class="form-inline" data-action="ajax-form" autocomplete="off">
                        <div class="row">
                            <div class="field col-xs-8">
                                <div class="form-group">
                                    <label class="sr-only" for="uniqueId">{% trans %}Unique document identifier{% endtrans %}</label>
                                    <input type="text" name="uniqueId" class="form-control" id="uniqueId" placeholder="{% trans %}Unique document identifier{% endtrans %}...">
                                </div>
                            </div>
                            <div class="button col-xs-4">
                                <button type="submit" class="btn btn-default">{% trans %}Check{% endtrans %}</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="drag" data-action="fileupload" data-name="upload_file_bulk_verify" data-confirmed="1">
                    {% trans %}Drag here the file or click to upload it{% endtrans %}...
                    <div class="btn btn-default btn-file">
                        <input type="file" name="file">
                    </div>
                </div>
                <div class="load collapse">
                    <p>{% trans %}Loading file, please wait{% endtrans %}...</p>
                    <div class="row">
                        <div class="col-xs-8 col-xs-offset-2">
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
                                    0%
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="reset" class="btn btn-link">{% trans %}Cancel{% endtrans %}</button>
                </div>
                <div class="drop">
                    <div>
                        <div id="drop-area">
                            {% trans %}Drop your file{% endtrans %}...
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('libs/jQuery-File-Upload-9.12.3/css/jquery.fileupload.css') }}">
    <link rel="stylesheet" href="{{ asset('libs/jQuery-File-Upload-9.12.3/css/jquery.fileupload-ui.css') }}">
{% endblock %}

{% block javascripts %}
    {# Libraries #}
    <script src="{{ asset('libs/jQuery-File-Upload-9.12.3/js/cors/jquery.postmessage-transport.js') }}"></script>
    <script src="{{ asset('libs/jQuery-File-Upload-9.12.3/js//vendor/jquery.ui.widget.js') }}"></script>
    <script src="{{ asset('libs/jQuery-File-Upload-9.12.3/js/jquery.iframe-transport.js') }}"></script>
    <script src="{{ asset('libs/jQuery-File-Upload-9.12.3/js/jquery.fileupload.js') }}"></script>
    <!--[if (gte IE 8)&(lt IE 10)]>
    <script src="{{ asset('libs/jQuery-File-Upload-9.12.3/js/cors/jquery.xdr-transport.js') }}"></script>
    <![endif]-->
    {# Own js #}
    <script src="{{ asset('js/files.js') }}"></script>
{% endblock %}