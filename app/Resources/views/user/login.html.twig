{% extends 'base-nolog.html.twig' %}

{% block title %}{% trans %}Sign in{% endtrans %}{% endblock %}

{% block body %}
<section class="forms form-signup">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-sm-offset-2">
                <h1>{% trans %}Start today to protect your property!{% endtrans %}</h1>
            </div>
            <div class="form-box col-xs-12 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
                <form class="labels-no" action="{{ path('login') }}" method="post">
                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <div class="group-form">
                        <label for="username" class="control-label required">{% trans %}Email{% endtrans %}</label>
                        <input type="email" class="form-control" placeholder="{% trans %}Email{% endtrans %}" required="required" name="_username" id="username"/>
                    </div>
                    <div class="group-form">
                        <label for="password" class="control-label required">{% trans %}Password{% endtrans %}</label>
                        <input type="password" class="form-control" placeholder="{% trans %}Password{% endtrans %}" required="required" name="_password" id="password"/>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

                    <div class="form-group">
                        <button class="btn btn-default btn-full" type="submit">{% trans %}Sign in{% endtrans %}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
{% endblock %}