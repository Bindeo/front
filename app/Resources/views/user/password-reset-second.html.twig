{% extends 'base-nolog.html.twig' %}

{% block title %}
    {% trans %}Password reset{% endtrans %}
{% endblock %}

{% block body %}
<section class="forms form-signup">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-sm-offset-2">
                <h1>{% trans %}Choose your new password{% endtrans %}</h1>
            </div>
            <div class="form-box col-xs-12 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
                {{ form_start(form, {'attr': {'class': 'labels-no'}}) }}
                    <p class="form-intro">{% trans %}Type and repeat your new sign in password{% endtrans %}.</p>
                    {{ form_errors(form) }}
                    {{ form_row(form.password.first, {'attr': {'placeholder': 'New password'}}) }}
                    {{ form_row(form.password.second, {'attr': {'placeholder': 'Repeat password'}}) }}
                    <div class="form-group">
                        <button type="submit" class="btn btn-default btn-full">{% trans %}Change password{% endtrans %}</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}