<div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <h1>{% trans %}Preferences{% endtrans %}</h1>
    <p>{% trans %}Update your account preferences{% endtrans %}.</p>
    <div class="forms">
        {% if successPreferences %}
            <div class="alert-success">{% trans %}Data successfully updated{% endtrans %}</div>
        {% endif %}
        {{ form_start(formPreferences) }}
            {{ form_errors(formPreferences) }}
            {{ form_row(formPreferences.lang) }}
            <button type="submit" class="btn btn-default">{% trans %}Update preferences{% endtrans %}</button>
        {{ form_end(formPreferences) }}
    </div>
</div>