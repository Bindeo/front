    <title>{% block title %}{% trans %}Bindeo: Protect your intellectual property{% endtrans %}{% endblock %}</title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="{{ asset('libs/bootstrap_3.3.6/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('libs/bootstrap_3.3.6/css/bootstrap-theme.min.css') }}">

    {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body{% block bodyclass %} class="body-user"{% endblock %}>
{% block navbar %}
<!-- Collect the nav links, forms, and other content for toggling -->
<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav navbar-right">

        <li class="active"><a href="{{ path('file_library') }}">Library</a></li>
        <li><a href="#">Emails</a></li>
        <li><a href="{{ path('file_upload') }}">Upload</a></li>

        <li class="dropdown hidden-xs">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ app.user.name }} <span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li><a href="{{ path('edit_profile') }}">{% trans %}Profile{% endtrans %}</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="{{ path('logout') }}">{% trans %}Logout{% endtrans %}</a></li>
            </ul>
        </li>

        <li class="visible-xs"><a href="{{ path('edit_profile') }}">{% trans %}Profile{% endtrans %}</a></li>
        <li class="visible-xs"><a href="{{ path('logout') }}">{% trans %}Logout{% endtrans %}</a></li>

    </ul>
</div>
<!-- /.navbar-collapse -->
{% endblock %}
{% block body %}{% endblock %}
