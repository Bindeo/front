<div class="load collapse">
    <p>{% trans %}Loading file, please wait{% endtrans %}...</p>
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
            <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
                    0%
                </div>
            </div>
        </div>
    </div>
    <button type="reset" class="btn btn-link">{% trans %}Cancel{% endtrans %}</button>
</div>

<br>
<div data-type="error-size" class="alert alert-danger collapse">
    <ul class="list-unstyled">
        {% if filesize is defined %}
        <li class="collapse" data-name="filesize">
            <span class="glyphicon glyphicon-exclamation-sign"></span>
            {% trans %}Ops!{% endtrans %} {% trans with {'%size%': filesize} %}You exceeded your max file size of %size% KB{% endtrans %}.
        </li>
        {% endif %}
        {% if freespace is defined %}
        <li class="collapse" data-name="freespace">
            <span class="glyphicon glyphicon-exclamation-sign"></span>
            {% trans %}Ops!{% endtrans %} {% trans with {'%size%': (freespace/1000000)|round(2, 'floor')} %}You only have %size% GB or free space{% endtrans %}.
        </li>
        {% endif %}
        <li class="collapse" data-name="maxfiles">
            <span class="glyphicon glyphicon-exclamation-sign"></span>
            {% trans %}Ops!{% endtrans %} {% trans with {'%maxfiles%': numFiles} %}You only can upload %maxfiles% files at the same time{% endtrans %}.
        </li>
    </ul>
</div>