<li class="row" data-name="signer">
    <div class="col-xs-12 col-sm-4">
        {{ form_row(signer.name, {'attr': {'placeholder':"Signer's name", 'data-checkable':'true', 'data-valid':'false'}}) }}
    </div>
    <div class="col-xs-8 col-sm-4">
        {{ form_row(signer.email, {'attr': {'placeholder':"Email address", 'data-name':'email', 'data-checkable':'true', 'data-valid':'false'}}) }}
    </div>
    <div class="col-xs-4 col-sm-3">
        {{ form_row(signer.phone, {'attr': {'data-name':'mobile-phone', 'data-checkable':'true', 'data-valid':'true'}}) }}
    </div>
    <div class="hidden-xs col-sm-1">
        <a class="btn btn-link" data-action="remove-signer" href="#"><span class="glyphicon glyphicon-remove"></span></a>
    </div>

</li>